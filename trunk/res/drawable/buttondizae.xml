<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
 <item android:state_pressed="true" >
     <shape android:shape="rectangle"  >
         <corners android:radius="3dip" />
         <stroke android:width="1dip" android:color="#8a8aec" />
         <gradient android:angle="-90" android:startColor="#cbcbff" android:endColor="#8a8aec"  />         
     </shape>
 </item>
<item android:state_focused="true">
     <shape android:shape="rectangle"  >
         <corners android:radius="3dip" />
         <stroke android:width="1dip" android:color="#8a8aec" />
         <gradient android:angle="-90" android:startColor="#cbcbff" android:endColor="#8a8aec"  />
     </shape>
 </item>  
<item >
    <shape android:shape="rectangle"  >
         <corners android:radius="3dip" />
         <stroke android:width="1dip" android:color="#4343b8" />
         <gradient android:angle="-90" android:startColor="#6666ff" android:endColor="#4343b8"  />            
     </shape>
 </item>
</selector>